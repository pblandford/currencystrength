<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearanceButton">@style/ButtonColor</item>
        <item name="alertDialogStyle">@style/DialogStyle</item>
        <item name="alertDialogTheme">@style/DialogTheme</item>
        <item name="colorButtonNormal">@android:color/black</item>
        <item name="android:spinnerItemStyle">@style/SpinnerColor</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerColor</item>
    </style>

    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SpinnerColor" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DialogTheme" parent="AppTheme">
        <item name="android:background">@color/dialogBackground</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorButtonNormal">@color/dialogBackground</item>
    </style>

    <style name="DialogStyle" parent="AppTheme">
        <item name="android:background">@color/dialogBackground</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorButtonNormal">@color/dialogBackground</item>
    </style>

    <style name="DialogSpinner" parent="DialogTheme">
        <item name="android:background">@color/dialogBackground</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
